<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turquoise"
    android:padding="16dp"
    tools:context=".FormularioResiduosActivity">

    <!-- Texto de encabezado -->
    <TextView
        android:id="@+id/text_tipo_residuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Tipo de Residuo"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo para ingresar cantidad -->

    <!-- BotÃ³n Guardar Registro -->

    <!-- Imagen representativa -->

    <EditText
        android:id="@+id/edit_cantidad"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="244dp"
        android:background="@android:color/white"
        android:hint="Ingrese cantidad"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="@color/black"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_tipo_residuo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_guardar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="44dp"
        android:text="Guardar Registro"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/turquoise"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_cantidad"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/image_residuo"
        android:layout_width="269dp"
        android:layout_height="226dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/edit_cantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_tipo_residuo"
        app:srcCompat="@drawable/residuos" />

</androidx.constraintlayout.widget.ConstraintLayout>
